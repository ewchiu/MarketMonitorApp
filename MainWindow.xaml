<Window x:Class="MarketMonitorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketMonitorApp"
        mc:Ignorable="d"
        Title="MarketMonitor - Real Time Stock Updates" Height="500" Width="500">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="56" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="138" />
            <ColumnDefinition Width="110*"/>
            <ColumnDefinition Width="61*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" FontSize="24" Margin="0,0,0,347" Grid.RowSpan="2" FontFamily="Haettenschweiler">MarketMonitor</Label>
        <ListBox Grid.Row="1" x:Name="SavedStocks" Margin="0,0,5,0" />
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="5,0,0,0">
            <Label Width="140">Enter Ticker:</Label>
            <TextBox x:Name="tickerName" Width="135" />
        </StackPanel>
        <Button x:Name="btnSubmit" Grid.Column="2" Click="ButtonSubmit_Click"  Margin="0,26,0,0" RenderTransformOrigin="0.742,0.055" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20" Width="88">Check My Stock</Button>
        <TextBlock x:Name="stockInfo1" Grid.Column="1" Grid.Row="1">
        </TextBlock>
        <TextBlock x:Name="stockInfo2" Grid.Column="2" Grid.Row="1">
        </TextBlock>
    </Grid>
</Window>
